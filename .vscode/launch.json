    "version": "0.2.0",
    "configurations": [
        {
            "name": "No AI",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--world", "assets/worlds/example.yaml"]
        },
        {
            "name": "llama3.2 (Ollama)",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--world", "assets/worlds/example.yaml", "--ai-model", "llama3.2"]
        },
        {
            "name": "gpt-oss:20b-cloud (Ollama)",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--world", "assets/worlds/saltwind_station.yaml", "--ai-model", "gpt-oss:20b-cloud"]
        },
        {
            "name": "gpt-4o-mini (OpenAI)",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.cli",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": ["--world", "assets/worlds/saltwind_station.yaml", "--ai-backend", "openai", "--ai-model", "gpt-4o-mini"]
        },
        {
            "name": "Web",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.webapp",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--world", "assets/worlds/saltwind_station.yaml", 
                "--ai-backend", "openai", 
                "--ai-model", "gpt-5-nano",
                "--ai-image-model", "gpt-image-1-mini",
                "--ai-image-size", "1024x1024",
                "--ai-image-quality", "low"
            ]
        },
        {
            "name": "Web - No AI",
            "type": "debugpy",
            "request": "launch",
            "module": "slork.webapp",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                "--world", "assets/worlds/saltwind_station.yaml", 
            ]
        },
    ]
}